{
  "design_system": {
    "name": "Otis Valen Design System",
    "version": "1.0.0",
    "colors": {
      "css_variables": {
        "primary": {
          "--bg": {
            "value": "#edf1e8",
            "name": "Background Primary",
            "usage": "Main background color",
            "rgb": "rgb(237, 241, 232)",
            "hsl": "hsl(76, 25%, 93%)"
          },
          "--bg2": {
            "value": "#d7dbd2",
            "name": "Background Secondary", 
            "usage": "Secondary background, menu overlay",
            "rgb": "rgb(215, 219, 210)",
            "hsl": "hsl(73, 13%, 84%)"
          },
          "--fg": {
            "value": "#141414",
            "name": "Foreground",
            "usage": "Main text color, dark elements",
            "rgb": "rgb(20, 20, 20)",
            "hsl": "hsl(0, 0%, 8%)"
          }
        },
        "accents": {
          "--accent1": {
            "value": "#ed6a5a",
            "name": "Coral Red",
            "usage": "Service card 1, transition overlay 2",
            "rgb": "rgb(237, 106, 90)",
            "hsl": "hsl(7, 79%, 64%)"
          },
          "--accent2": {
            "value": "#f4f1bb",
            "name": "Cream Yellow",
            "usage": "Service card 2, transition overlay 3",
            "rgb": "rgb(244, 241, 187)",
            "hsl": "hsl(57, 73%, 85%)"
          },
          "--accent3": {
            "value": "#9bc1bc",
            "name": "Sage Green",
            "usage": "Service card 3, transition overlay 4",
            "rgb": "rgb(155, 193, 188)",
            "hsl": "hsl(172, 24%, 68%)"
          },
          "--accent4": {
            "value": "#5d576b",
            "name": "Purple Gray",
            "usage": "Service card 4, transition overlay 5",
            "rgb": "rgb(93, 87, 107)",
            "hsl": "hsl(258, 10%, 38%)"
          }
        }
      },
      "utility_colors": {
        "black": {
          "value": "#000000",
          "usage": "Borders, box shadows, pure black accents"
        },
        "pure_black": {
          "value": "#000",
          "usage": "Contact button borders"
        }
      },
      "gradients": {
        "contact_button": {
          "type": "linear-gradient",
          "angle": "45deg",
          "colors": [
            "var(--accent1)",
            "var(--accent2)", 
            "var(--accent3)",
            "var(--accent4)"
          ],
          "background_size": "400% 400%",
          "animation": "gradientMove 10s ease-in-out infinite"
        },
        "stripe_pattern": {
          "type": "repeating-linear-gradient",
          "angle": "45deg",
          "pattern": [
            "rgba(0, 0, 0, 0.125) 0px",
            "rgba(0, 0, 0, 0.125) 15px",
            "transparent 15px",
            "transparent 30px"
          ]
        }
      }
    },
    "typography": {
      "font_families": {
