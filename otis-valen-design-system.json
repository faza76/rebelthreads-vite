      },
      "text_styles": {
        "heading_large": {
          "element": "h1",
          "font_family": "rader",
          "font_size": "5rem",
          "font_style": "italic",
          "text_transform": "uppercase",
          "line_height": "0.95",
          "mobile_font_size": "2.5rem"
        },
        "heading_medium": {
          "element": "h2",
          "font_family": "rader",
          "font_size": "4rem",
          "font_style": "italic",
          "text_transform": "uppercase",
          "line_height": "0.95"
        },
        "heading_small": {
          "element": "h3",
          "font_family": "rader",
          "font_size": "2rem",
          "font_style": "italic",
          "text_transform": "uppercase",
          "line_height": "0.95"
        },
        "body_text": {
          "element": "p, p.ss",
          "font_family": "formula-narrow",
          "font_size": "1.25rem",
          "font_weight": "600",
          "line_height": "1.125"
        },
        "meta_text": {
          "element": "p.mn",
          "font_family": "supply-mono",
          "font_size": "0.875rem",
          "font_weight": "500",
          "text_transform": "uppercase",
          "line_height": "1.125"
        },
        "navigation_text": {
          "element": ".nav-item p",
          "font_size": "2rem",
          "user_select": "none"
        },
        "contact_cta_large": {
          "element": ".contact-text-large h1",
          "font_size": "7rem",
          "mobile_font_size": "3rem"
        }
      }
    },
    "spacing": {
      "border_radius": {
        "small": "0.4em",
        "medium": "0.5em",
        "large": "2em",
        "extra_large": "20em"
      },
      "borders": {
        "thick": "0.75em",
        "standard": "1px"
      }
    },
    "shadows": {
      "contact_button": "10px 10px 0px 5px #000000"
    },
    "animations": {
      "gradient_move": {
        "name": "gradientMove",
        "duration": "10s",
        "timing": "ease-in-out",
        "iteration": "infinite",
        "keyframes": {
          "0%": "background-position: 0% 50%",
          "50%": "background-position: 100% 50%",
          "100%": "background-position: 0% 50%"
        }
      },
      "stripe_move": {
        "name": "stripeMove",
        "duration": "30s",
        "timing": "linear",
        "iteration": "infinite",
        "keyframes": {
          "0%": "transform: translateX(-50%)",
          "100%": "transform: translateX(0%)"
        }
      }
    },
    "usage_guide": {
      "color_applications": {
        "service_cards": {
          "card_1": "var(--accent1) - Coral Red",
          "card_2": "var(--accent2) - Cream Yellow", 
          "card_3": "var(--accent3) - Sage Green",
          "card_4": "var(--fg) - Dark with light text"
        },
        "transitions": {
          "overlay_1": "var(--fg) - Dark",
          "overlay_2": "var(--accent1) - Coral Red",
          "overlay_3": "var(--accent2) - Cream Yellow",
          "overlay_4": "var(--accent3) - Sage Green",
          "overlay_5": "var(--accent4) - Purple Gray"
        },
        "navigation": {
          "logo_background": "var(--fg) - Dark",
          "menu_button": "var(--bg2) - Secondary background",
          "overlay_background": "var(--bg2) - Secondary background",
          "active_nav_item": "var(--fg) - Dark background"
        }
      },
      "font_applications": {
        "headings": "Always use 'rader' family, italic, uppercase",
        "body_copy": "Use 'formula-narrow' for main content",
        "meta_info": "Use 'supply-mono' for labels, tags, small info",
        "special_layouts": "Formula variants for specific design needs"
      }
    }
  }
} 